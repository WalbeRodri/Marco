<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.marco.MainActivity"
    tools:showIn="@layout/app_bar_main2">

    <Button
        android:id="@+id/btnAtual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/btn_viagem_atual"
        android:clickable="true"
        android:onClick="createTrip"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button

        android:id="@+id/btnNova"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@mipmap/btn_criar_nova"
        android:clickable="true"
        android:onClick="createTrip"
        android:layout_below="@+id/btnHistorico"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnHistorico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/btn_historico"
        android:clickable="true"
        android:onClick="listTrips"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/btnAtual"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnGostos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/btn_gostos"
        android:clickable="true"
        android:onClick="gerenciaGostos"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/btnNova"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
