<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_gostos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.marco.GostosActivity"
    tools:showIn="@layout/activity_gostos"
    android:layout_margin="1pt">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="179dp">

            <ToggleButton

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tbBar"
                android:background="@mipmap/bar"
                android:textOff=" "
                android:textOn=" "
                android:layout_weight="1"
                android:layout_margin="1pt" />

            <ToggleButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tbTeatro"
                android:background="@mipmap/teatro"
                android:textOff=" "
                android:textOn=" "
                android:layout_weight="1"
                android:layout_margin="1pt" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="179dp">

            <ToggleButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tbPraca"
                android:background="@mipmap/praca"
                android:textOff=" "
                android:textOn=" "
                android:layout_weight="1"
                android:layout_margin="1pt" />

            <ToggleButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tbPraia"
                android:textOff=" "
                android:textOn=" "
                android:background="@mipmap/praia"
                android:layout_weight="1"
                android:layout_margin="1pt" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
